<body class="min-h-screen bg-neutral-98 dark:bg-neutral-6 flex items-center justify-center font-material">
  <div class="w-full max-w-md">
    <!-- Logo and Title -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-primary-40 rounded-full mb-4 shadow-md3-2">
        <span class="material-icons text-primary-100 text-2xl">dashboard</span>
      </div>
      <h1 class="text-3xl font-medium text-neutral-10 dark:text-neutral-90 mb-2">Octagon Launcher</h1>
      <p class="text-neutral-50 dark:text-neutral-60">Application Hub & System Monitor</p>
    </div>

    <!-- Login Card -->
    <div class="bg-neutral-99 dark:bg-neutral-10 rounded-3xl shadow-md3-3 p-8">
      <form method="POST" action="/login" class="space-y-6">
        <div>
          <label for="password" class="block text-sm font-medium text-neutral-10 dark:text-neutral-90 mb-2">
            Password
          </label>
          <div class="relative">
            <input 
              type="password" 
              id="password" 
              name="password" 
              required
              class="w-full px-4 py-3 border border-neutral-variant-50 dark:border-neutral-variant-60 rounded-xl bg-neutral-99 dark:bg-neutral-10 text-neutral-10 dark:text-neutral-90 focus:border-primary-40 focus:outline-none focus:ring-1 focus:ring-primary-40 transition-all duration-200"
              placeholder="Enter your password"
              autofocus
            >
            <span class="material-icons absolute right-3 top-3 text-neutral-variant-50 text-xl">lock</span>
          </div>
        </div>

        <% if (error) { %>
          <div class="bg-error-95 dark:bg-error-10 border border-error-60 dark:border-error-30 rounded-2xl p-4">
            <div class="flex items-center">
              <span class="material-icons text-error-40 dark:text-error-80 mr-3">error</span>
              <span class="text-sm text-error-10 dark:text-error-90"><%= error %></span>
            </div>
          </div>
        <% } %>

        <button 
          type="submit"
          class="w-full bg-primary-40 hover:bg-primary-30 focus:bg-primary-35 text-primary-100 font-medium py-3 px-6 rounded-full transition-all duration-200 flex items-center justify-center space-x-2 group shadow-md3-2 hover:shadow-md3-3 focus:outline-none focus:ring-2 focus:ring-primary-40/20"
        >
          <span>Sign in</span>
          <span class="material-icons group-hover:translate-x-1 transition-transform duration-200">arrow_forward</span>
        </button>
      </form>
    </div>

    <!-- Footer -->
    <div class="text-center mt-8">
      <p class="text-sm text-neutral-50 dark:text-neutral-60">
        Press <kbd class="px-2 py-1 bg-neutral-90 dark:bg-neutral-20 border border-neutral-variant-50 dark:border-neutral-variant-60 rounded-lg text-xs font-mono text-neutral-10 dark:text-neutral-90">Enter</kbd> to login
      </p>
    </div>
  </div>

  <script>
    // Enter key submission
    document.getElementById('password').addEventListener('keypress', function(e) {
      if (e.key === 'Enter') {
        this.closest('form').submit();
      }
    });

    // Auto-focus password field
    document.getElementById('password').focus();
  </script>
